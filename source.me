export PIM_MATMUL_BENCHMARKS_ROOT="$(pwd)"

if [ "$(id -u)" -ne 0 ]; then

    if [ ! -f scripts/pim-matmul-env/bin/activate ]; then
        python3 -q -m venv scripts/pim-matmul-env
